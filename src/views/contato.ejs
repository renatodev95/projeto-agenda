<%- include('includes/head.ejs') %> 
<%- include('includes/nav.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-4">
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">Crie ou edite seu contato abaixo.</p>

      <%- include('includes/messages.ejs') %> 

      <% if (contato._id) { %> 
        <form action="/contato/edit/<%=contato._id%> " method="POST">
      <% } else { %> 
        <form action="/contato/register" method="POST">
      <% } %> 
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <div class="form-group my-2">
          <label>Nome</label>
          <input value="<%= contato.nome %>" type="text" name="nome" class="form-control" />
        </div>
        <div class="form-group my-2">
          <label>Sobrenome</label>
          <input value="<%= contato.sobrenome %>" type="text" name="sobrenome" class="form-control" />
        </div>
        <div class="form-group my-2">
          <label>Email</label>
          <input value="<%= contato.email %>" type="email" name="email" class="form-control" />
        </div>
        <div class="form-group my-2">
          <label>Telefone</label>
          <input value="<%= contato.telefone %>" type="tel" name="telefone" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary my-2">
          Salvar
        </button>
      </form>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer.ejs') %>
